<h1>All Tasklists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasklists.each do |tasklist| %>
      <tr>
        <td><%= tasklist.title %></td>
        <td><%= link_to 'Show', tasklist_path(tasklist) %></td>
        <td><%= link_to 'Edit', edit_tasklist_path(tasklist) %></td>
        <td><%= link_to 'Destroy', tasklist_path(tasklist), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

<%= link_to 'Create New Tasklist', new_tasklist_path %>
